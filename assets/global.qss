    border: 2px solid #393e46;
    padding:10px;
    border-radius: 4px;
}

QPushButton#pushButtonAddCustomer
{
    margin-top:40px;
}


QSpinBox#staffFormID
{
	width:0px;
    height:0px;
    border:none;
    padding:0px;
}

QLabel#titleStaff {
    border: 2px solid #393e46;
    padding:10px;
    border-radius: 4px;
}

QPushButton#pushButtonAddStaff
{
    margin-top:40px;
}



QDateEdit
{
    border: 2px solid #393e46;
    border-radius: 4px;
    padding: 1px;
    color: #ececec;
    background: #393e46;
}

QLineEdit {
    border: 2px solid #393e46;
    border-radius: 4px;
    color: #ececec;
    padding: 1px;
    background: #393e46;
}

